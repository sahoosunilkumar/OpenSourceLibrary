<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="favoriteViewModel" type="com.sunilsahoo.poc.mvvm.favorite.FavoriteViewModel" />
        <variable name="status" type="com.sunilsahoo.poc.mvvm.favorite.FavoriteViewModel" />
        <import type="android.view.View"/>
    </data>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="@{favoriteViewModel.title}"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        bind:list="@{favoriteViewModel}"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="@{favoriteViewModel.showProgress? View.VISIBLE : View.GONE}"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
</layout>